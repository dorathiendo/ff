<link rel="stylesheet" href="/stylesheets/tour.css"/>
<div class="main">
    <div class="content-wrapper">
        <div id="tour">
            <h1>{{title}}</h1>
            <!--<input type="text" placeholder="Filter by city, date..."/>-->
            <button class="list-view-btn">List View</button>
            {{#each events}}
                <div class="layout visible">
                    <!--<img src="http://www.glastoguide.co.uk/wp-content/uploads/2014/05/glasto1a.jpg" alt=""/>-->
                    <div class="info">
                        <span>{{this.date}}</span>
                        <span>{{this.location}}</span>
                        <span>{{this.name}}</span>
                        <a href="{{this.url}}">Tickets</a>
                    </div>
                </div>
            {{/each}}
        </div>
        <div id="tour-list-view">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Name</th>
                        <th>Tickets</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each events}}
                        <tr>
                            <td>{{this.date}}</td>
                            <td>{{this.location}}</td>
                            <td>{{this.name}}</td>
                            <td><a href="{{this.url}}">Tickets</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
